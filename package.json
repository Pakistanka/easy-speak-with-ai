{
  "name": "easy-speak-2",
  "version": "2.0.0",
  "description": "A modern Next.js 15 application with Feature-Sliced Design architecture",
  "author": "Anastasiia Polozova",
  "license": "MIT",
  "private": true,
  "keywords": [
    "nextjs",
    "react",
    "typescript",
    "tailwindcss",
    "feature-sliced-design",
    "fsd",
    "tanstack-query",
    "storybook"
  ],
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:all": "concurrently \"yarn dev\" \"cd backend && yarn server\"",
    "build": "next build",
    "start": "next start",
    "eslint": "next lint --fix --dir src",
    "prettier": "prettier --write .",
    "lint": "yarn eslint && yarn prettier",
    "format": "next lint --fix && prettier '**/*.{json,yaml}' --write --ignore-path .gitignore",
    "ngrok": "ngrok http 3000",
    "test": "jest",
    "test:watch": "jest --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "lint-staged": {
    "*.{js,jsx,md,ts,tsx,html,css,scss}": "yarn prettier",
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix --cache-location ./node_modules/.cache/.eslintcache"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^15.3.2",
    "@tailwindcss/postcss": "^4.1.4",
    "@tanstack/react-query": "^5.80.7",
    "@tanstack/react-query-devtools": "^5.59.16",
    "axios": "^1.8.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.17.0",
    "lucide-react": "^0.487.0",
    "next": "^15.2.5",
    "next-intl": "^3.20.0",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.53.1",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^5.3.0",
    "tailwind-merge": "^3.2.0",
    "winston": "^3.14.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/nextjs": "^9.1.15",
    "@tailwindcss/cli": "^4.1.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.15.3",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.15.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "^15.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "husky": "^9.1.6",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "storybook": "^9.1.15",
    "tailwindcss": "^4.1.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  }
}
